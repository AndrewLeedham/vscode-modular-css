{
  "fileTypes": ["source.css"],
  "injectionSelector": "source.css",
  "name": "modular-css)",
  "patterns": [
    {
      "include": "#external"
    },
    {
      "begin": "\\s*((@)value\\b)\\s*",
      "captures": {
        "1": {
          "name": "keyword.control.at-rule.value.css"
        },
        "2": {
          "name": "punctuation.definition.keyword.css"
        }
      },
      "end": "\\s*((?=;|$))",
      "name": "meta.at-rule.value.css",
      "patterns": [
        {
          "match": "\\*",
          "name": "variable.language.misc.css"
        },
        {
          "match": "(as\\b)",
          "name": "keyword.control.css"
        },
        {
          "begin": "(:)\\s*",
          "beginCaptures": {
            "1": {
              "name": "punctuation.seperator.key-value.css"
            }
          },
          "end": "\\s*((?=;|\\}))",
          "endCaptures": {
            "1": {
              "name": "punctuation.terminator.rule.css"
            }
          },
          "name": "meta.property-value.css",
          "patterns": [
            {
              "include": "source.css#property-values"
            }
          ]
        },
        {
          "match": ",",
          "name": "punctuation.separator.key.css"
        },
        {
          "match": "(from\\b)",
          "name": "keyword.control.css"
        },
        {
          "include": "source.css#string"
        },
        {
          "match": "([A-Za-z-_]+\\b)",
          "name": "support.type.property-name.css"
        }
      ]
    },
    {
      "captures": {
        "1": {
          "name": "support.type.property-name.css"
        },
        "2": {
          "patterns": [
            {
              "include": "#import"
            }
          ]
        },
        "3": {
          "name": "punctuation.terminator.rule.css"
        }
      },
      "match": "\\b(composes)\\b(.+)(?=;|\\})"
    }
  ],
  "repository": {
    "import": {
      "patterns": [
        {
          "match": "(from\\b)",
          "name": "keyword.control.css"
        },
        {
          "include": "source.css#string"
        },
        {
          "match": "([A-Za-z-_]+)\\b",
          "name": "meta.property-value.css"
        }
      ]
    },
    "external": {
      "captures": {
        "1": {
          "name": "punctuation.definition.entity.css"
        },
        "2": {
          "name": "entity.other.attribute-name.pseudo-class.css"
        },
        "3": {
          "patterns": [
            {
              "include": "#import"
            }
          ]
        }
      },
      "match": "(:)(external)\\b\\s*\\(([^\\)]+\\))"
    }
  },
  "scopeName": "source.modular.css"
}
